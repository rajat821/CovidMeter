<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.IndiaStats">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFirst"
        android:clickable="true"
        android:stateListAnimator="@animator/selection"
        android:focusable="true"
        android:layout_width="160dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:layout_height="180dp"
        app:cardElevation="15dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backindia0">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/confirmedstats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:text="Confirmed"
                android:textColor="#0800FF"/>

            <TextView
                android:id="@+id/confirmedToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/poppins"
                android:text="13200"
                android:alpha="0.5"
                android:textSize="11sp"
                android:textColor="#0800FF"
                app:drawableStartCompat="@drawable/ic_blue" />

            <TextView
                android:id="@+id/confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins"
                android:text="3126542"
                android:textColor="#0800FF"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSecond"
        android:layout_width="160dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:layout_height="180dp"
        app:cardCornerRadius="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:stateListAnimator="@animator/selection"
        android:focusable="true"
        app:cardElevation="15dp"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backindia1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/activestats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:text="Active"
                android:textColor="#FF0000"/>

            <TextView
                android:id="@+id/active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins"
                android:text="3126542"
                android:textColor="#FF0000"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardThird"
        android:layout_width="160dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:layout_height="180dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        android:clickable="true"
        android:stateListAnimator="@animator/selection"
        android:focusable="true"
        app:cardElevation="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardFirst">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backindia2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/recoverstats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:text="Recovered"
                android:textColor="#09AC04"/>

            <TextView
                android:id="@+id/recoveredToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/poppins"
                android:text="13200"
                android:alpha="0.5"
                android:textSize="11sp"
                android:textColor="#09AC04"
                app:drawableStartCompat="@drawable/ic_green" />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins"
                android:text="3126542"
                android:textColor="#09AC04"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFourth"
        android:layout_width="160dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:layout_height="180dp"
        app:cardElevation="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:stateListAnimator="@animator/selection"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        android:layout_below="@id/cardSecond"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backindia3">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/deathstats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:text="Deaths"
                android:textColor="#7D7D81"/>

            <TextView
                android:id="@+id/deathToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/poppins"
                android:text="13200"
                android:alpha="0.5"
                android:textSize="11sp"
                android:textColor="#7D7D81"
                app:drawableStartCompat="@drawable/ic_grey24" />

            <TextView
                android:id="@+id/death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins"
                android:text="3126542"
                android:textColor="#7D7D81"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/fetchData"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:stateListAnimator="@animator/selection"
                android:focusable="true"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="#FBE8E8"
                android:layout_below="@id/textDate"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Get Data Of Current District"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/asul"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/helplines"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:stateListAnimator="@animator/selection"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#EEDFFF"
        android:layout_below="@id/fetchData"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Helplines"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:fontFamily="@font/asul"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            app:drawableStartCompat="@drawable/ic_call" />

    </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardFourth"
                android:text="Last Updated On : 27/09/2020 13:03:06"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>

        </RelativeLayout>

    </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backcolorfragment">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressBar2"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textFetching2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetching Data..."
            android:layout_below="@+id/progressBar2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="13dp"/>

    </RelativeLayout>


</RelativeLayout>